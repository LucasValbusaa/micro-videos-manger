{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022", 
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true, 
    "skipLibCheck": true,
    "strictNullChecks": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["src/*"],
      "@domain/*": ["src/domain/*"],
      "@shared/*": ["src/@shared/*"]
    },
    "types": ["vitest/globals", "./test/vitest.d.ts"],
  }
}
